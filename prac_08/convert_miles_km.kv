BoxLayout:
    orientation: 'vertical'
    spacing: 10
    padding: 10

    BoxLayout:
        orientation: 'horizontal'
        spacing: 10

        TextInput:
            id: miles_input
            hint_text: 'Enter miles'
            font_size: 18
            multiline: False
            on_text: app.handle_input_change()

        BoxLayout:
            orientation: 'vertical'

            Button:
                text: 'Up'
                on_press: app.handle_increment(1)

            Button:
                text: 'Down'
                on_press: app.handle_increment(-1)

    Button:
        text: 'Convert'
        on_press: app.handle_convert()

    Label:
        text: app.result_text
        font_size: 24
        color: (1, 1, 0, 1)  # Yellow color
